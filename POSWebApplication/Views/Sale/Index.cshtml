                            <input id="inputTableNo" class="btn btn-info m-1 text-truncate" style="font-size: 12px;width: 100px;text-align: center;cursor: pointer"
                                   onclick="chooseTableNo()" data-toggle="modal" data-target="#tableNoModal" value="Table" readonly />
                        </div>
                        <div id="divTable" class="table-responsive" style="max-height: 400px;overflow-y: auto">
