                                    <label class="col-6 col-form-label text-truncate text-right" style="font-size: 14px">Bill Total</label>
                                    <div class="col-6">
                                        <input class="form-control col-12" id="billTotal" style="text-align: right" value="0" readonly>
                                    </div>

                                </div>
                                <div class="row mt-1">
                                    <label class="col-6 col-form-label text-truncate text-right" style="font-size: 14px">Bill Discount</label>
                                    <div class="col-6">
                                        <input class="btn btn-info col-12 custom-color" id="billDiscount" onclick="clickFunction(this.id)" style="cursor: pointer;text-align: right" value="0" readonly>
