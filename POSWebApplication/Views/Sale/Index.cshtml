<style>
    th, td {
        overflow: hidden;
        white-space: nowrap;
    }

    .custom-box {
        margin: 5px auto; /* Center the box */
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
    }

    .highlight {
        background-color: silver;
    }

    .bordered-image {
        width: 100px;
        height: 100px;
        border: 2px solid #333;
        border-radius: 5px;
    }

    .loading-text {
        display: none;
        color: black;
        font-size: 20px;
        text-align: center;
        margin-top: 20px;
    }

    .price-tag {
        position: absolute;
        top: 0px;
        right: 0px;
        background-color: #31849B;
        color: white;
        padding: 5px 5px;
        font-size: 12px;
        border-radius: 5px;
    }

    .number-pad {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: grid;
        grid-template-columns: repeat(3, 70px);
        grid-gap: 10px;
        max-width: 250px;
        margin: 0 auto;
        background-color: whitesmoke;
        border: 2px solid black;
        border-radius: 5px;
        padding: 10px;
        z-index: 9999;
    }

    .uom-table-pad {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        max-width: 400px;
        margin: 0 auto;
        background: whitesmoke;
        border: 2px solid black;
        border-radius: 5px;
        padding: 10px;
        z-index: 1;
    }

    .number-pad-button {
        font-size: 20px;
        padding: 10px;
        cursor: pointer;
    }

        .number-pad-button:first-child {
            grid-column: 3;
        }

    .number-pad-input {
        grid-column: 1 / span 2;
        padding: 10px;
        font-size: 20px;
        text-align: right;
    }

    #loader-wrapper {
        position: relative;
        background: #fff; /* background color of the loader wrapper */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    #loader {
        border: 8px solid #f3f3f3; /* light grey */
        border-top: 8px solid #3498db; /* blue */
        border-radius: 50%;
        width: 50px;
        height: 50px;
        animation: spin 1s linear infinite;
    }

    #content {
        text-align: center;
        padding: 20px;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

</style>

